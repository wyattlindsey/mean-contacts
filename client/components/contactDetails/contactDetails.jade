div.container-fluid.well
	div.col-md-6
		div.contact-name
			div.h2.contact-first-name(tooltip='First name',
				tooltip-placement='left') {{singleSelectedItem.firstName}}
			div.h2.contact-last-name(tooltip='Last name',
				tooltip-placement='left') {{singleSelectedItem.lastName}}
		div.contact-phone(tooltip='Phone',
			tooltip-placement='left') {{singleSelectedItem.phone}}
		div.contact-email(tooltip='Email',
			tooltip-placement='left') {{singleSelectedItem.email}}
		div.contact-skype(tooltip='Skype',
			tooltip-placement='left') {{singleSelectedItem.skype}}
		div.contact-address
			div.contact-street-address(tooltip='Street Address',
				tooltip-placement='left') {{singleSelectedItem.streetAddress}}
			div.contact-secondary-address(tooltip='Secondary Address',
				tooltip-placement='left') {{singleSelectedItem.secondaryAddress}}
			div.contact-city-state(tooltip='City, State',
				tooltip-placement='left') {{singleSelectedItem.city}} {{singleSelectedItem.state}}
			div.contact-zip(tooltip='Zip',
				tooltip-placement='left') {{singleSelectedItem.zip}}
	div.col-md-6
		div.contact-pane-avatar
			img(src="http://upload.wikimedia.org/wikipedia/en/b/b1/Portrait_placeholder.png" height="250" width="250")