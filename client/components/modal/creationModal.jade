block content
	div(ng-controller="ModalCtrl")
		div.contacts-modal
			div.contacts-modal-header
				h2 Create new contact

			div.contacts-modal-body
				form(name='modalForm', novalidate, ng-submit='modalFormSubmit(modalForm)')
					fieldset
						div.row.modal-random-button
							button.btn.btn-large.btn-success(type='button', ng-disabled='modalForm.qty.$error.number', ng-click='generateRandomPerson(formData.qty)') Generate random people
							span.qtyField
								label
									input.form-control.input-sm(type='number', name='qty', min='0', max='1000', placeholder='1', ng-model='formData.qty')
								div.error(ng-show='modalForm.qty.$error.number') Not valid number!
						div.row
							div.col-md-4.col-md-offset-2
								div.modal-field
									label
										input(type='text', name='firstName', required, placeholder='First name', ng-model='formData.firstName', autofocus)
										span(style='color:red', ng-show='modalForm.firstName.$dirty && modalForm.firstName.$invalid')
										span.error(ng-show='modalForm.firstName.$error.required && modalForm.firstName.$dirty') First name required
								div.modal-field
									label
										input(type='text', name='lastName', placeholder='Last name', ng-model='formData.lastName')
								div.modal-field
									label
										input(type='text', name='phone', placeholder='Phone', ng-model='formData.phone')
								div.modal-field
									label
										input(type='email', name='email', placeholder='Email', ng-model='formData.email')
										span.error(ng-show='modalForm.email.$error.email') Invalid email address
								div.modal-field
									label
										input(type='text', name='skype', placeholder='Skype', ng-model='formData.skype')
							div.col-md-4
								div.modal-field
									label
										input(type='text', name='streetAddress', placeholder='Street address', ng-model='formData.streetAddress')
								div.modal-field
									label
										input(type='text', name='secondaryAddress', placeholder='Secondary address', ng-model='formData.secondaryAddress')
								div.modal-field
									label
										input(type='text', name='city', placeholder='City', ng-model='formData.city')
								div.modal-field
									label
										input(type='text', name='state', placeholder='State', ng-model='formData.state')
								div.modal-field
									label
										input(type='text', name='zip', placeholder='Zip', ng-model='formData.zip')
						div.row
							div.modal-avatar
								img(src="http://upload.wikimedia.org/wikipedia/en/b/b1/Portrait_placeholder.png" height="150" width="150")
							div.modal-primary-buttons
								button.btn.btn-large.btn-primary(type='submit', ng-disabled='modalForm.firstName.$invalid || modalForm.email.$invalid') Create
							div.modal-primary-buttons
								button.btn.btn-large.btn-warning(type='button', ng-click='modalCancelButton()') Cancel
							div.modal-primary-buttons
								button.btn.btn-large.btn-danger(type='button', ng-click='openProgressModal()') Progress
