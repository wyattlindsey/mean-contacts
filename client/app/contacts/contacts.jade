extends ../default

block content
	div.container
		div.row
			div.span2(ng-controller='ModalCtrl')
				button.btn.btn-large.btn-primary(type='button',
					ng-click='open()') Create Contact

	table#contactsTable.display.compact
		thead
			tr
				th Name
				th Delete
		tbody(ng-repeat='contact in contacts')
			tr
				td {{contact.name}}
				td
					li.btn.btn-success(type='button', ng-click='deleteContact(contact._id)')
						i.fa.fa-minus