extends ../default

block content
	div.container-fluid
		div.row-fluid.main-app(ng-controller='GridCtrl')
			div.col-md-7.contacts-toolbar
				div.centered
					div.row-fluid
						alert.animate-repeat(ng-repeat='alert in alerts', data-ng-animate="'alert'" type='{{alert.type}}', close='closeAlert($index)') {{alert.msg}}
					div.row-fluid.contacts-toolbar-controls(ng-controller='ModalCtrl')
						div.col-md-6
							div.create-contact
								button.btn.btn-large.btn-primary(type='button',
									ng-click='openCreateDialog()')
									i.fa.fa-plus &nbsp;Add New Contact
						div.col-md-6
							div.delete-selected
								button.btn.btn-large.btn-warning(type='button',
									ng-click='deleteAction()')
									i.fa.fa-trash &nbsp;Delete Selected
					div.row
						div.select-all.pull-left
							label.pull-right.select-all-label(ng-click='selectAllRows()') {{selectAllLabel}}
							button.btn.btn-xs.btn-success.btn-select-all(type='button',
								ng-click='selectAllRows()')
								i.fa.fa-asterisk
				div.contacts-grid
					div.gridStyle(ui-grid='gridOptions', ui-grid-selection, ui-grid-edit)

			div.col-md-5
				div#contact-details-pane(contact-details)

block js
	script(src='./faker.js')